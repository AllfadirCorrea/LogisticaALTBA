<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.altba.logisticaaltba.MainActivity"
        android:background="@drawable/background_altba1_jpeg"
        android:paddingBottom="120dp">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:srcCompat="@drawable/logotipo_altba_negro"
                android:id="@+id/imageView" android:layout_weight="1"
                android:layout_marginTop="20dp" android:layout_marginBottom="100dp"
                android:layout_marginStart="15dp" android:layout_marginEnd="15dp"/>
        <EditText
                android:layout_width="match_parent" android:layout_height="50sp"
                android:inputType="textPersonName" android:id="@+id/txtUsuario"
                android:ems="10" android:hint="Usuario" android:layout_weight="0"
                android:textColorHint="@color/stategray" android:textColor="@color/black" android:textCursorDrawable="@color/black"
                android:layout_marginStart="25dp" android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp" android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext" android:textAlignment="center"
                android:textSize="20sp"/>
        <EditText
                android:layout_width="match_parent" android:layout_height="50sp"
                android:inputType="textPassword" android:ems="10" android:layout_weight="0"
                android:id="@+id/txtPassword" android:hint="Contraseña"
                android:textColorHint="@color/stategray" android:textColor="@color/black" android:textCursorDrawable="@color/black"
                android:layout_marginStart="25dp" android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp" android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext" android:textAlignment="center"
                android:textSize="20sp"/>
        <Button
                android:text="Iniciar sesión" android:id="@+id/btnLogin"
                android:layout_width="match_parent" android:layout_height="60sp"
                android:backgroundTint="@color/yellowAlt" android:textColor="@color/webGrey"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:layout_marginEnd="25dp" android:layout_marginStart="25dp"
                app:icon="@drawable/enter" app:iconSize="25sp" android:textSize="16sp"
                app:iconGravity="textEnd" app:iconTint="@color/webGrey"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/txtPedo" android:gravity="center"/>

</LinearLayout>