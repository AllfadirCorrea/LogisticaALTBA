<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Dashboard"
        android:background="@drawable/background_altba1_jpeg">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"
            android:paddingBottom="1dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logotipo_altba_negro"
                android:id="@+id/imageView" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <Button
                        android:text="Recibir pedido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/recibir" android:layout_weight="1"
                        android:backgroundTint="@color/YellowOrange" android:onClick="recibirPedido"
                        android:textColor="@color/blackVariant" android:layout_margin="20dp"

                        app:icon="@drawable/logistica__1_" app:iconTint="@color/blackVariant" app:iconSize="80dp"
                        app:iconGravity="top"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <Button
                        android:text="Registrar entrega"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/entregar" android:layout_weight="1"
                        android:backgroundTint="@color/YellowOrange" android:onClick="entregarPedido"
                        android:textColor="@color/blackVariant" android:layout_margin="20dp"
                        app:icon="@drawable/logistica"
                        app:iconSize="75dp" app:iconGravity="top" app:iconTint="@color/blackVariant"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>